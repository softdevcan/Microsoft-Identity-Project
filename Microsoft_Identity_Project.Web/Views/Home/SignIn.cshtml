
@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">

    <div class="col-md-4 offset-md-4">
        <h2>User Login</h2>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>
        <form asp-controller="Home" asp-action="SignIn" asp-route-returnurl="@Context.Request.Query["returnURL"]" method="post">
            <div class="mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <input value="cakyldrm@gmail.com" asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="col-md-4 col-form-label" asp-for="Password"></label>
                <input value="Password123." asp-for="Password" class="form-control">
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe">Remember Me!</label>
                    </div>
                </div>
                <div class="col me-0">
                    <div>
                        <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgotPassword">Forgot Password</a>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>

        </form>
    </div>
</div>
